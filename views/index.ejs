    <script>


        function handleClick() {
            alert('Div clicked!');
        }



        let inside_gym = <%= inside_gym %>;
        // Function to toggle the gym state and update the button
        function toggleGymState() {

            // Toggle the inside_gym state
            inside_gym = !inside_gym;

            // Get button elements
            const button = document.getElementById('checkButton');
            const buttonText = document.getElementById('checkButtonText');

            // Update text and classes based on the new state
            if (inside_gym) {
                buttonText.textContent = 'Check-Out';
                button.className = 'bg-red-500 rounded-2xl flex flex-col items-center justify-center min-w-[312px] h-32 text-gray-900 bg-gradient-to-r from-red-200 via-red-400 to-red-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 shadow-lg shadow-red-500/50 dark:shadow-lg dark:shadow-red-800/80 font-medium text-sm px-5 py-2.5 text-center me-2 mb-2';
                check_in();

            } else {
                buttonText.textContent = 'Check-In';
                button.className = 'bg-slate-500 rounded-2xl flex flex-col items-center justify-center min-w-[312px] h-32 text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 dark:focus:ring-lime-800 shadow-lg shadow-lime-500/50 dark:shadow-lg dark:shadow-lime-800/80 font-medium text-sm px-5 py-2.5 text-center me-2 mb-2';
                check_out();
            }
        }

        // Bind the click event to the button
        document.getElementById('checkButton').addEventListener('click', toggleGymState);

        function check_in() {
            fetch('/checkin', {
                method: 'POST', // Ensure this matches the method used on the server
                credentials: 'same-origin' // Ensures cookies are sent with the request
            })
        }

        function check_out() {
            fetch('/checkout', {
                method: 'POST', // Ensure this matches the method used on the server
                credentials: 'same-origin' // Ensures cookies are sent with the request
            })
        }


        function logout() {
            fetch('/logout', {
                method: 'DELETE', // Ensure this matches the method used on the server
                credentials: 'same-origin' // Ensures cookies are sent with the request
            })
                .then(response => {
                    if (response.redirected) {
                        // Redirect if the server indicates a redirection
                        window.location.href = response.url;
                    } else {
                        // Handle the case where no redirect is provided
                        window.location.href = '/login';
                    }
                })
                .catch(error => {
                    console.error('Error during logout:', error);
                    // Optionally redirect to a fallback page
                    window.location.href = '/login';
                });
        }


    </script>

